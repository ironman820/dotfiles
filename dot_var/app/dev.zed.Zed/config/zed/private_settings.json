// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "rcm2.desk",
      "projects": [
        {
          "paths": [
            "/app"
          ]
        }
      ]
    },
    {
      "host": "rcm.desk",
      "projects": [
        {
          "paths": [
            "/app"
          ]
        },
        {
          "paths": [
            "/var/www/html"
          ]
        }
      ]
    },
    {
      "host": "traefik.desk",
      "projects": [
        {
          "paths": [
            "/etc/traefik"
          ]
        }
      ]
    }
  ],
  "icon_theme": "Material Icon Theme",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "preferred_line_length": 160,
  "tab_size": 2,
  "format_on_save": "off",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 20,
  "languages": {
    "PHP": {
      "format_on_save": "off",
      "language_servers": ["intelephense", "!phpactor"]
    },
    "Python": {
      "debuggers": ["Debugpy"],
      "format_on_save": "off"
    }
  }
}
